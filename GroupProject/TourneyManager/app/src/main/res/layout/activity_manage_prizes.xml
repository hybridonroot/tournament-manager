<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <Button
        android:text="Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonBack"
        android:onClick="buttonReturn" />

    <TextView
        android:text=" "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView14"
        android:layout_weight="0.08" />

    <Button
        android:text="Current Prizes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonCurrentPrizesForm" />

    <TextView
        android:text=" "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView15"
        android:layout_weight="0.10" />

    <Button
        android:text="Current Profit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonCurrentProfitForm" />

    <TextView
        android:text=" "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView16"
        android:layout_weight="0.10" />

    <Button
        android:text="Profit History"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonProfitHistoryForm" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView20"
        android:layout_weight="0.10" />

    <Button
        android:text="Player Prizes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonPlayerPrizesForm" />

</LinearLayout>