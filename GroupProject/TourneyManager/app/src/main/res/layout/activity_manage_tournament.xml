<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <Button
        android:text="back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonMgrHome"
        android:onClick="buttonReturn" />

    <TextView
        android:text=" "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView14"
        android:layout_weight="0.08" />

    <Button
        android:text="Manage Players"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonManagePlayersForm"
        android:onClick="buttonManagePlayers" />

    <TextView
        android:text=" "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView15"
        android:layout_weight="0.10" />

    <Button
        android:text="Prizes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonPrizesForm"
        android:onClick="buttonPrizes" />

    <TextView
        android:text=" "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView16"
        android:layout_weight="0.10" />

    <Button
        android:text="Match Options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonMatchOptionsForm"
        android:onClick="buttonMatchOptions" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView20"
        android:layout_weight="0.10" />

    <Button
        android:text="Other Options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonOtherForm"
        android:onClick="buttonOther" />

</LinearLayout>